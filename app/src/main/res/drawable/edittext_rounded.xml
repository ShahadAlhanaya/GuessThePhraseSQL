<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <size android:width="300dp"
                android:height="50dp"/>
            <solid android:color="@color/Concrete"/>
            <corners
                android:radius="50dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <size android:width="300dp"
                android:height="50dp"/>
            <solid android:color="@color/Concrete"/>
            <stroke android:color="@color/CeriseRed_light"
                android:width="1dp"/>
            <corners
                android:radius="50dp" />
        </shape>
    </item>
</selector>